// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id               Int       @id @default(autoincrement())
  username         String    @unique
  fullName         String?
  password         String
  role             String    @default("USER") // "ADMIN" lub "USER"
  blocked          Boolean   @default(false)
  mustChangePassword Boolean @default(false)
  passwordExpiresAt DateTime? 
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  failedAttempts    Int      @default(0)
  blockedUntil     DateTime?

  passwordHistory  PasswordHistory[]
}

model PasswordHistory {
  id          Int      @id @default(autoincrement())
  userId      Int
  password    String   // hash
  changedAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Settings {
  id                Int     @id @default(autoincrement())
  minLength         Int     @default(14)
  requireDigit      Boolean @default(true)
  requireLowercase  Boolean @default(true)
  requireUppercase  Boolean @default(false)
  requireSpecial    Boolean @default(false)
  passwordExpiryDays Int    @default(90)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model ActivityLog {
  id         Int      @id @default(autoincrement())
  username   String
  action     String
  success    Boolean
  message    String?
  createdAt  DateTime @default(now())
}